{% extends 'base.html.twig' %}

{% block title %}Liste des zones
{% endblock %}

{% block body %}
	<div class="page-header">
		<h1>Liste des zones</h1>
		<a href="{{ path('app_zones_client_new') }}" class="btn btn-primary">+ Ajouter une zone</a>
	</div>

	<div class="table-wrapper">
		<table>
			<thead>
				<tr>
					<th>#</th>
					<th>Nom</th>
					<th>Type</th>
					<th>Site</th>
					<th>Client</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for zone in zones_clients %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>
							<a href="{{ path('app_zones_client_show', {'id': zone.id}) }}">{{ zone.nom }}</a>
						</td>
						<td>{{ zone.typeZone ? zone.typeZone.nom : 'Sans type' }}</td>
						<td>{{ zone.sitesClient.nom }}</td>
						<td>{{ zone.sitesClient.client.nom }}</td>
						<td>
							<div class="btn-group">
								<a href="{{ path('app_zones_client_show', {'id': zone.id}) }}" class="btn btn-outline btn-sm">Voir</a>
								<a href="{{ path('app_zones_client_edit', {'id': zone.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucune zone trouv√©e</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
