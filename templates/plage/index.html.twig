{% extends 'base.html.twig' %}

{% block title %}Plage index{% endblock %}

{% block body %}
    <h1>Plage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>HeureDebut</th>
                <th>HeurFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plage in plages %}
            <tr>
                <td>{{ plage.id }}</td>
                <td>{{ plage.heureDebut ? plage.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ plage.heurFin ? plage.heurFin|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_plage_show', {'id': plage.id}) }}">Afficher</a>
                    <a href="{{ path('app_plage_edit', {'id': plage.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_plage_new') }}">Creer</a>
{% endblock %}
