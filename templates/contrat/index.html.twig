{% extends 'base.html.twig' %}

{% block title %}Liste des contrats
{% endblock %}

{% block body %}
	<div class="page-header">
		<h1>Liste des contrats</h1>
		{% if app.user and is_granted('ROLE_ADMIN') %}
			<a href="{{ path('app_contrat_new') }}" class="btn btn-primary">+ Ajouter un contrat</a>
		{% endif %}
	</div>

	<div class="table-wrapper">
		<table>
			<thead>
				<tr>
					<th>#</th>
					<th>Numéro</th>
					<th>Site</th>
					<th>Client</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for contrat in contrats %}
					<tr>
						<td>{{ contrat.id }}</td>
						<td>
							<a href="{{ path('app_contrat_show', {'id': contrat.id}) }}">{{ contrat.numero }}</a>
						</td>
						<td>{{ contrat.sitesClient.nom }}</td>
						<td>{{ contrat.sitesClient.client.nom }}</td>
						<td>
							<div class="btn-group">
								<a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-outline btn-sm">Voir</a>
								{% if app.user and is_granted('ROLE_ADMIN') %}
									<a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
								{% endif %}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucun contrat trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
