{% extends 'base.html.twig' %}

{% block title %}Reutilisable index{% endblock %}

{% block body %}
    <h1>Reutilisable index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code</th>
                <th>Picto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reutilisable in reutilisables %}
            <tr>
                <td>{{ reutilisable.id }}</td>
                <td>{{ reutilisable.nom }}</td>
                <td>{{ reutilisable.code }}</td>
                <td>{{ reutilisable.picto }}</td>
                <td>
                    <a href="{{ path('app_reutilisable_show', {'id': reutilisable.id}) }}">show</a>
                    <a href="{{ path('app_reutilisable_edit', {'id': reutilisable.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reutilisable_new') }}">Create new</a>
{% endblock %}
