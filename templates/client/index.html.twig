{% extends 'base.html.twig' %}

{% block title %}Liste des clients
{% endblock %}

{% block body %}
	<div class="page-header">
		<h1>Liste des clients</h1>
		<a href="{{ path('app_client_new') }}" class="btn btn-primary">+ Ajouter un client</a>
	</div>

	<div class="table-wrapper" style="max-width: 500px;">
		<table>
			<thead>
				<tr>
					<th>#</th>
					<th>Nom client</th>
				</tr>
			</thead>
			<tbody>
				{% for client in clients %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>
							<a href="{{ path('app_client_show', {'id': client.id}) }}">{{ client.nom }}</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="2">
							<div class="empty-state">
								<p>Aucun client trouv√©</p>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
