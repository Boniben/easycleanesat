                <td>{{ intervention.mercrediApHd ? intervention.mercrediApHd|date('H:i:s') : '' }}</td>
                <td>{{ intervention.mercrediApHf ? intervention.mercrediApHf|date('H:i:s') : '' }}</td>
                <td>{{ intervention.jeudiMatHd ? intervention.jeudiMatHd|date('H:i:s') : '' }}</td>
                <td>{{ intervention.jeudiMatHf ? intervention.jeudiMatHf|date('H:i:s') : '' }}</td>
                <td>{{ intervention.jeudiApHd ? intervention.jeudiApHd|date('H:i:s') : '' }}</td>
                <td>{{ intervention.jeudiApHf ? intervention.jeudiApHf|date('H:i:s') : '' }}</td>
                <td>{{ intervention.vendrediMatHd ? intervention.vendrediMatHd|date('H:i:s') : '' }}</td>
                <td>{{ intervention.vendrediMatHf ? intervention.vendrediMatHf|date('H:i:s') : '' }}</td>
                <td>{{ intervention.vendrediApHd ? intervention.vendrediApHd|date('H:i:s') : '' }}</td>
                <td>{{ intervention.vendrediApHf ? intervention.vendrediApHf|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}">show</a>
                    <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="28">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_intervention_new') }}">Create new</a>
{% endblock %}
