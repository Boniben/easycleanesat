{% extends 'base.html.twig' %}

{% block title %}Intervention index{% endblock %}

{% block body %}
    <h1>Intervention index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumVersion</th>
                <th>DateCreation</th>
                <th>DateModification</th>
                <th>NbTravailleur</th>
                <th>DureeHeure</th>
                <th>DureeMinute</th>
                <th>LundiMatHd</th>
                <th>LundiMatHf</th>
