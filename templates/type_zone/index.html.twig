{% extends 'base.html.twig' %}

{% block title %}Types de zone{% endblock %}

{% block body %}
    <h1>Types de zone</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_zone in type_zones %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ type_zone.nom }}</td>
                <td>
                    <a href="{{ path('app_type_zone_show', {'id': type_zone.id}) }}">Consulter</a>
                    <a href="{{ path('app_type_zone_edit', {'id': type_zone.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun type de zone trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_type_zone_new') }}">Ajouter un type de zone</a>
{% endblock %}