{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index - Désactivés</h1>

    <div class="mb-3">
        <a href="{{ path('app_produit_new') }}" class="btn btn-success btn-lg">+ Créer un nouveau produit</a>
        <a href="{{ path('app_produit_index') }}" class="btn btn-success">Retour aux produits actifs</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Nom</th>
                <th>Couleur</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.code }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.couleur }}</td>

                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">Afficher</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
